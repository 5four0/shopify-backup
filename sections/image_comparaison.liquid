}

.image-comparison__slider {
  position: absolute;
  top: 0;
  left: 50%;
  width: 2px;
  height: 100%;
  background-color: #fff;
  transition: background-color 0.3s ease-in-out;
  z-index: 10;
}
.image-comparison__range--active ~ .image-comparison__slider {
  background-color: #fff;
}

.image-comparison__thumb {
  position: absolute;
  top: calc(50% - 31.5px);
  left: calc(50% - 24px);
  width: 48px;
  height: 63px;
  display: flex;
