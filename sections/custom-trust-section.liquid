<style>
  .trust-section{
    /* padding:96px 0 24px; */
    max-width:100%;
  }
  .trust-section .trust_items {
    position: relative;
  }
  .trust_item{
    max-width:419px;
    flex:0 0 419px;
    width:100%;
  }
  .trust_item.first{
    max-width:480px;
    width:100%;
  }
  .trust_item.first{
    border-radius:30px;
    background:#29425E;
    color:white;
    padding:65px 100px 65px 20px;
  }
   .trust_item.first h2{
      font-size: 40px;
    margin: 0;
    line-height: 48px;
    color: white;
     margin-bottom: 14px;
   }
  .trust_item.first p{
    margin-top:14px;
    font-weight:bold;
  }
  .trust_item.first svg{
    height:32px;
    width:32px;
  }
  .trust_item.second{
    padding:32px;
    transition:1s;
    background:#F9F9F9;
     border-radius:30px;
     cursor: auto;
  }
   .trust_item.second img{
      height:22px;
    width:22px;
    margin:0 1px;
  }
  /* .trust_item.second svg path{
    fill:#E9C545;
  } */
  .trust_item.second .trust_top p{
    margin:0;
    margin-right:10px;
  }
  .trust_item.second .trust_top{
    align-items:center;
    margin-bottom: 20px;
    
  }
  .trust-reviews{
    /* flex:1; */
    /* overflow: hidden; */
    position:relative;
    column-gap: 20px;
     overflow-x: scroll;
    overflow-y: hidden;
     will-change: transform;
		 user-select: none;
    transition: all 0.2s;
           cursor: grabbing;
    cursor: -webkit-grabbing;
    }

  .c_container{
    padding-right:0;
    max-width:100%;
    padding-left:100px;
  }
  .trust-reviews::-webkit-scrollbar {
  display: none;
}

/* Hide scrollbar for IE, Edge and Firefox */
.trust-reviews {
  -ms-overflow-style: none;  
  scrollbar-width: none;  
}
  .next-arrow,.prev-arrow{
    position:absolute;
    top:calc(50% - 24px);
    right:5px;
    z-index:1;
    cursor:pointer;
    opacity:0;
    visibility:hidden;
    transition:visibility 0s, opacity .5s;
  }
  .next-arrow,,.prev-arrow{
    height:48px;
    width:48px;
  }
  .prev-arrow{
  /* left:28%; */
        left: 0px;
    right:unset;
    
  }
  .next-arrow.active,
  .prev-arrow.active{
    opacity:1;
    visibility:visible;
  }
  .prev-arrow svg{
    transform:rotate(180deg);
  }
  
  @media (max-width:999px){
     .trust-section{
    padding:48px 0 24px;
  }
