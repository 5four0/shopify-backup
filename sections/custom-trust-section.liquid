<script>
let cc = 0;
let steps = 1;
let count = (document.querySelector(".trust-reviews").childElementCount) - 2;

document.querySelector(".next-arrow").addEventListener("click",function(){
  if(steps < count){
    cc = cc - 439;
   steps++;
  }
  if(steps > 1){
    document.querySelector(".prev-arrow").classList.add("active");
  }
   if(steps == count){
    document.querySelector(".next-arrow").classList.remove("active");
  }
  document.querySelectorAll(".trust_item.second").forEach(function(item){
    if(steps <= count ){           
    item.style.transform="translateX("+ cc +"px)";  
    }
  })
  
})    

  

  document.querySelector(".prev-arrow").addEventListener("click",function(){
    if(steps > 1){
   steps--;
   cc = cc + 439;
  }
   
  if(steps == 1){
    document.querySelector(".prev-arrow").classList.remove("active");
  }
   if(steps < count){
    document.querySelector(".next-arrow").classList.add("active");
  }
    
  document.querySelectorAll(".trust_item.second").forEach(function(item){
    if(steps > 0 ){
       
    item.style.transform="translateX("+ cc +"px)";  
    }
  })
 
})      


