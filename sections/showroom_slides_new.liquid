{%- assign section_identifier = '#shopify-section-' | append: section.id -%}
  {%- assign  padding_top = section.settings.padding_top | append:'px' -%}
  {%- assign  padding_bottom = section.settings.padding_bottom | append:'px' -%}

{%- assign padding_mobile_top = section.settings.padding_top_mob | append: 'px' -%}
{%- assign padding_mobile_bottom = section.settings.padding_bottom_mob | append: 'px' -%}


<style>
  {{ section_identifier }} {
    padding-top: {{padding_top}};
    padding-bottom: {{padding_bottom}};
  }

.cc-showroom-new-slide .image_overlay_text .d_flex p {
  white-space: pre;
}
  
  .cc-custom-liquid{
    background:white;
  }
  .module-slideshow-image-description {
    width: 100%;
}
  .module-slideshow-image-description .slides-wrapper {
   /* position: sticky;
    top:0;*/
    overflow: hidden;
    height: 100lvh;
}
  .module-slideshow-image-description .slide {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    height: 100lvh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    will-change: transform;
    transform: translateZ(0);
    /* background:white; */
    background: var(--Light-Grey, #F9F9F9);
}
  .partial-image-with-mask {
        width: 100%;
    height: auto;
    overflow: hidden;
    max-width: 600px;
    border-radius: 24px;
    margin: 0 auto;
}
  .module-slideshow-image-description .slide .background{
    flex:0 0 50%;
  }
  .module-slideshow-image-description .slide .background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
  .cc-showroom-new-slider p.d_big_text-x {
      margin-bottom: 30px;
  }
  .partial-image-with-mask img {
 /*   position: absolute;*/
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
  .module-slideshow-image-description .slide .content {
    position: relative;
    text-align: center;
    max-width: 342px;
    color: white;
    padding-left: 30px;
    padding-right: 30px;
    will-change: transform;
    font-size: 2rem;
    line-height: 2.25rem;
    transform: translateZ(0);
}

  .image_overlay_content{
      /*  transform: translate3d(0px, -953px, 0px);*/
    will-change: transform;
        flex: 0 0 50%;
    padding-right: 100px;
  }
  .image_overlay_text .d_flex{
   column-gap:32px;
    align-items:center;
  }
  .content-left h3{
    margin: 0;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 21.6px; /* 21.6px */
    letter-spacing: 2px;
    color: #bcbcbc;
    margin-bottom: 6px;
  }
  .content-left .small_h {
    font-size: 36px;
    font-style: normal;
    font-weight: 600;
    line-height: 130%;
    letter-spacing: 2px;
    text-transform: capitalize;
    margin: 0;
}
  .content-left .d_big_text-x {
    font-size: 16px;
    line-height: 24px;
}
  @media (min-width: 960px) {
    .module-slideshow-image-description {
        padding: 0;
        margin-top: -20px;
    }
    .module-slideshow-image-description .slide .background {
  /*  position: absolute;*/
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: 50% 25%;
}
    .module-slideshow-image-description .slide .content {
    padding-left: unset;
    padding-right: unset;
    max-width: 1015px;
    font-size: 4.5rem;
    line-height: 4.5rem;
}
    .module-slideshow-image-description .b-left, .module-slideshow-image-description .b-right, .module-slideshow-image-description .b-top, .module-slideshow-image-description .b-bottom {
    display: block;
    position: absolute;
    background-color:white;
}
}
    .image_overlay_ov,.image_overlay_content{
    height:100%;
    width:100%;
    top:0;
    left:0;
   
  }

  .image_overlay_content{
    align-items:center;
  }
  .image_overlay_text{
    max-width:690px;
  }
  .image_overlay_text h1{
    margin-bottom:14px;
  }
  .image_overlay_text .d_flex p{
        font-size: 18px;
    margin-right: 14px;
    line-height: 27px;
    margin:0;
    white-space: pre;
  }

  @media (max-width:960px){
   /* .module-slideshow-image-description{
      height:auto!important;
    }
    .slide{
      transform:unset!important;
    }
    .module-slideshow-image-description .slide {
    position: relative;
}
    .module-slideshow-image-description .slides-wrapper {
     height: auto; 
}*/
    .module-slideshow-image-description .slides-wrapper {
     height: auto; 
}
    .module-slideshow-image-description .slide {
    position:relative;
    height: auto;
}
    .image_overlay_text .d_flex p{
              width: fit-content;
        white-space: nowrap;
    }
    .module-slideshow-image-description .slide .background {
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: 50% 25%;
}
    .module-slideshow-image-description .slide{
      flex-wrap:wrap;
              padding: 24px 20px;
    }
    .image_overlay_content {
      height:auto;
    flex: 0 0 100%;
    padding-right: 0px;
      margin-bottom: 32px;
}
    .partial-image-with-mask {
    max-width: 100%;
    border-radius: 12px;
}
    .module-slideshow-image-description .slide .background {
    flex: 0 0 100%;
}
    .image_overlay_text .d_flex {
    column-gap: 18px;
    align-items: flex-start;
}
      .content-left h3{
    font-size: 16px;
    line-height: 19.2px;
  }
  .content-left .small_h {
    font-size: 28px;
    line-height: 33.6px;
}
  .content-left .d_big_text-x {
    font-size: 16px;
    line-height: 24px;
}
  }

  @media only screen and (max-width: 768px) {
    .cc-showroom-new-slider .image_overlay_content,
    .cc-showroom-new-slider .module-slideshow-image-description .slide .background,
    .cc-showroom-new-slider  .module-slideshow-image-description .slide,
      .cc-showroom-new-slider  .module-slideshow-image-description .slides-wrapper {
        height: 100% !important;
        transform: unset !important;
    }
    {{ section_identifier }} {
      padding-top: {{ padding_mobile_top }};
      padding-bottom: {{ padding_mobile_bottom }};
    }
      .module-slideshow-image-description .slide:first-child {
        padding: 0 20px 24px;
    }
      .module-slideshow-image-description .slide:last-child {
        padding: 24px 20px 0;
    }
      .module-slideshow-image-description .slide {
        flex-wrap: wrap;
        padding: 24px 20px;
    }
      .partial-image-with-mask {
         height: 181px;
      }
    .cc-showroom-new-slider p.d_big_text-x {
        margin-bottom: 24px;
        font-size: 16px;
        line-height: 24px;
    }
  }
  @media only screen and (max-width: 414px) {
    .cc-showroom-new-slider p.d_big_text-x {
        margin-bottom: 24px;
        font-size: 16px;
        line-height: 24px;
    }
  }
   @media only screen and (max-width: 430px) {
    {{ section_identifier }} {
      padding-top: {{ padding_mobile_top }};
      padding-bottom: {{ padding_mobile_bottom }};
    }
  .cc-showroom-new-slider p.d_big_text-x {
        margin-bottom: 24px;
        font-size: 16px;
        line-height: 24px;
    }
  }
</style>
<div class="module module-slideshow-image-description ">
  <div class="slides-wrapper" style="translate: none; rotate: none; scale: none;">


 {% for block in section.blocks %}
    <div class="slide pad_desk" style="translate: none; rotate: none; scale: none;{% comment %}z-index:{{ block.settings.z-index }}{% endcomment %}">

   <div class="d_flex image_overlay_content">
              <div class="image_overlay_text">
                <div class="d_flex">
                  <p>{{ forloop.index }}.</p>
                  <div class="content-left">
                    <h3>{{ block.settings.subheading }}</h3>
                <h1 class="small_h">{{ block.settings.heading }}</h1>
                  </div>
                </div>   
              </div>
          </div>

      
      <div class="background" style="translate: none; rotate: none; scale: none; ">
        <p class="d_big_text-x">{{ block.settings.text }}</p>
        <div class="partial-image-with-mask">
          <picture>
            <img src="{{ block.settings.image_desktop | img_url:"master" }}" class="picture is-background" data-src="" alt="" draggable="false">
          </picture>
        </div>
      </div>



    {% comment %} 
    <div class="image_overlay_ov absolute" style="background:#000000;opacity:0.{{ block.settings.overlay_opacity }};"></div>
    {% endcomment %}
      
  

      
    </div>
{% endfor %}
{% comment %}
    <div class="b-left" style="translate: none; rotate: none; scale: none; transform: translate3d(-100px, 0px, 0px);"></div>
    <div class="b-right" style="translate: none; rotate: none; scale: none; transform: translate3d(100px, 0px, 0px);"></div>
    <div class="b-top"></div>
    <div class="b-bottom" style="translate: none; rotate: none; scale: none; transform: translate3d(0px, 0px, 0px);"></div>
    {% endcomment %}
  </div>
</div>

{% schema %}
{
  "name": "Showroom new slides",
  "class": "cc-showroom-new-slider",
  "tag": "section",
  "settings": [
{
        "type": "header",
        "content": "Kikstart Spacing Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_top_mob",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "For Mobile Padding top",
        "default": 48
      },
      {
        "type": "range",
        "id": "padding_bottom_mob",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "For Mobile Padding Bottom",
        "default": 48
      }

  ],
      "blocks": [
    {
      "type":"text_block",
      "name":"text block",
      "settings": [
        {
       "type": "image_picker",
      "id": "image_desktop",
      "label": "image desktom"
     },
      {
       "type": "image_picker",
      "id": "image_mobile",
      "label": "image mobile"
     },
         {
      "type": "text",
      "id": "subheading",
      "label": "subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
   {
      "type": "textarea",
      "id": "text",
      "label": "text"
   },
           {
       "type": "range",
      "id": "z-index",
      "label": "z-index",
        "min":1,
        "max": 99,
        "default":1
     }
      ]
    }
  ],
  "presets": [
    {
      "name": "Showroom new slides"
    }
  ]
}
{% endschema %}